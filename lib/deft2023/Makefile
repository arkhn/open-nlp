
help:  ## Show help
	@grep -E '^[.a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

utils/clean: ## Clean autogenerated files
	rm -rf dist
	find . -type f -name "*.DS_Store" -ls -delete
	find . | grep -E "(__pycache__|\.pyc|\.pyo)" | xargs rm -rf
	find . | grep -E ".pytest_cache" | xargs rm -rf
	find . | grep -E ".ipynb_checkpoints" | xargs rm -rf
	rm -f .coverage

utils/clean-logs: ## Clean logs
	rm -r logs/**

utils/format: ## Run pre-commit hooks
	pre-commit run -a

utils/sync: ## Merge changes from main branch to your current branch
	git pull
	git pull origin main

docker/build: ## Build docker image
	docker build -t deft2023 .

docker/run: ## Run docker image
	sudo docker run -v $(shell pwd):/workspace/project --gpus all -it -e SHELL=/bin/zsh --rm deft2023 zsh

exp/baseline: ## Run baseline
	cd baseline && python train.py

exp/gen: ## Run baseline
	cd gen && python gen/train.py experiment=default trainer=gpu logger=wandb

exp/gen/large: ## Run baseline
	cd gen && python gen/train.py experiment=large trainer=gpu logger=wandb

exp/gen/xl: ## Run baseline
	cd gen && python gen/train.py experiment=xl trainer=gpu logger=wandb
