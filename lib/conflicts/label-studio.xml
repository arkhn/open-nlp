<View>
  <View style="display: grid; grid-template-columns: 1fr 1fr; column-gap: 1em;">
    <View>
      <Header value="Document 1"/>
      <Text name="timestamp_1" value="$timestamp_1"/>
      <Text name="doc_1" value="$doc_1"/>
      <Labels name="labels_doc1" toName="doc_1">
        <Label value="Conflict" background="red"/>
      </Labels>
    </View>
    <View>
      <Header value="Document 2"/>
      <Text name="timestamp_2" value="$timestamp_2"/>
      <Text name="doc_2" value="$doc_2"/>
      <Labels name="labels_doc2" toName="doc_2">
        <Label value="Conflict" background="red"/>
      </Labels>
    </View>
  </View>
   <Header value="Évaluation globale"/>
  <Header value="Statut de validation" level="2"/>
  <Choices name="validation_status" toName="doc_1" choice="single-radio">
    <Choice value="Approved" alias="Accept"/>
    <Choice value="Rejected" alias="Reject"/>
    <Choice value="Needs Review" alias="Need Review"/>
  </Choices>
  <Header value="Niveau de confiance" level="2"/>
  <Number name="confidence_level" toName="doc_1" min="0" max="100" step="5" default="80" slider="true"/>
  <Header value="Commentaires d'expert" level="2"/>
  <TextArea name="expert_comments" toName="doc_1" placeholder="Écrire un commentaire ici..." rows="4"/>
</View>
